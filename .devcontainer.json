{
  "name": "TF14-GPU-Jupyter",
    "image": "tensorflow/tensorflow:2.14.0-gpu-jupyter",
    
    "customizations": {
      "settings": {
        "python.defaultInterpreterPath": "/bin/python"
      },
      "vscode": {
        "extensions": ["ms-python.python",
                       "ms-toolsai.jupyter"
                    ]
      }
    },
    "forwardPorts": [3000],
    "runArgs": ["--gpus", "all"]
  }